<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MeetingApp.Models.ViewModels"
             x:Class="MeetingApp.Pages.CalendarPage"
             x:DataType="vm:CalendarViewModel"
             xmlns:models="clr-namespace:MeetingApp.Models"
             >

    <ScrollView>
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Navigace -->
            <Button Text="◀" Command="{Binding PreviousWeekClickedCommand}" Grid.Row="0" Grid.Column="0"/>
            <Label Text="{Binding WeekRange}" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" FontSize="Large"/>
            <Button Text="▶" Command="{Binding NextWeekClickedCommand}" Grid.Row="0" Grid.Column="2"/>

            <!-- Kalendářní mřížka -->
            <Grid x:Name="CalendarCore" Grid.Row="1" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <!-- 24 slotů po 30 minutách -->
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <!-- repeat 23x -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Hlavička dnů -->
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Days[0].Date, StringFormat='{}{0:ddd dd}'}" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="2" Text="{Binding Days[1].Date, StringFormat='{}{0:ddd dd}'}" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="3" Text="{Binding Days[2].Date, StringFormat='{}{0:ddd dd}'}" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="4" Text="{Binding Days[3].Date, StringFormat='{}{0:ddd dd}'}" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="5" Text="{Binding Days[4].Date, StringFormat='{}{0:ddd dd}'}" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="6" Text="{Binding Days[5].Date, StringFormat='{}{0:ddd dd}'}" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="7" Text="{Binding Days[6].Date, StringFormat='{}{0:ddd dd}'}" HorizontalTextAlignment="Center"/>

                <!-- Časová osa vlevo -->


                <Label Grid.Row="0" Grid.Column="0" Text="8:00"/>
                <Label Grid.Row="2" Grid.Column="0" Text="9:00"/>
                <Label Grid.Row="4" Grid.Column="0" Text="10:00"/>
                <Label Grid.Row="6" Grid.Column="0" Text="11:00"/>
                <Label Grid.Row="8" Grid.Column="0" Text="12:00"/>
                <Label Grid.Row="10" Grid.Column="0" Text="13:00"/>
                <Label Grid.Row="12" Grid.Column="0" Text="14:00"/>
                <Label Grid.Row="14" Grid.Column="0" Text="15:00"/>
                <Label Grid.Row="16" Grid.Column="0" Text="16:00"/>
                <Label Grid.Row="18" Grid.Column="0" Text="17:00"/>
                <Label Grid.Row="20" Grid.Column="0" Text="18:00"/>
                <Label Grid.Row="22" Grid.Column="0" Text="19:00"/>
                

                <!-- Dynamicky generované sloty -->

                <StackLayout BindableLayout.ItemsSource="{Binding Days[0].Meetings}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models.MeetingDisplay">
                        <Frame BackgroundColor="{Binding ColorHex}" Padding="4" Margin="1" Grid.Row="{Binding GridRow}" Grid.RowSpan="{Binding RowSpan}">    
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                     Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CalendarViewModel}}, Path=EditMeetingCommand}" 
                                      CommandParameter="{Binding Meeting}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontSize="Small" TextColor="White"/>
                                <Label Text="{Binding TimeRange}" FontSize="10" TextColor="White"/>
                                <Label Text="{Binding ParticipantInfo}" FontSize="10" TextColor="White"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

                <!-- zopakovat ItemsControl pro Grid.Column="2" až "7" -->
                <!-- ... -->
                </StackLayout>
            
        </Grid>

            <!-- Přidat schůzku -->
            <Button Text="+" Command="{Binding AddMeetingClickedCommand}" Grid.Row="2" Grid.Column="2"
                    WidthRequest="50" HeightRequest="50" CornerRadius="25"
                    BackgroundColor="Orange" TextColor="White" FontSize="Large" HorizontalOptions="End"/>
        </Grid>
    </ScrollView>
</ContentPage>
